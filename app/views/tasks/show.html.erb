<div class="container">
  <h1><%= @task.title %></h1>
  <p>Details: <%= @task.details %></p>
  <p>Completed? <%= @task.completed %></p>
</div>

<button type="button" class="btn btn-outline-primary"><%= link_to 'Home', tasks_path %></button>
<button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_task_path(@task) %></button>
<button type="button" class="btn btn-outline-danger"><%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %></button>
